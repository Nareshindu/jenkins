pipeline {
    agent any
    options {
        timeout(time: 4, unit: 'SECONDS')
    }
    stages {
        stage('Naresh') {
            steps {
              echo 'Hello Naresh'
              error 'pipeline failed'
            }
        }
    }
    
    post {
        failure {
            echo 'print this'
            echo 'above mentioned pipeline is failure'
        }    
        // failure {
        //     echo 'above mentioned pipeline is failure'
        // }
    }
}